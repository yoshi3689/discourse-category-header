<div class="body-nav-title">
  <div class="title-container-above-body">
    <h2>{{d-icon "comments"}}</h2>
    <h2>{{title}}</h2>
  </div>
  <div class="filter-icons-container">
    <h4>{{d-icon "filter"}}</h4>
     {{combo-box
    class="posts-filter"
    content=statuses
    value=status
    valueProperty="value"
    onChange=(action "changeStatus")
    options=(hash
      caretDownIcon="sort-amount-up"
      caretUpIcon="sort-amount-up"
    )
  }}
    <button class="question-btn">
      <span class="btn-text">Ask a Question</span>
    </button>
  </div>
  
</div>