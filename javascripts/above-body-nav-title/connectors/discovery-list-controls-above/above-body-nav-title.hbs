<div class="body-nav-title">
  <div class="nav-list">
    <div class="nav-item-wrapper">
     <p>{{d-icon "home"}}</p>
     <a href="/latest">Good to Grow Community</a>
   </div>
    {{#if isInCategories}}
    <div class="nav-item-wrapper">
     {{d-icon 'caret-right'}}
      <a href="/categories">Discussions</a>
    </div>
    {{/if}}

  {{#if isInCategory}}
    {{#if hasParent}}
    <div class="nav-item-wrapper">
      {{d-icon 'caret-right'}}
       <a href={{parent.parentPath}}>{{parent.parentName}}</a> 
    </div>
      {{/if}}
      <div class="nav-item-wrapper">
      {{d-icon 'caret-right'}}
      <a href={{self.selfPath}}>{{self.selfName}}</a> 
      </div>
  {{/if}}

  </div>
  <div class="header-container">
      <div class="title-container-above-body">
    <h2>{{d-icon "comments"}}</h2>
    <h2>{{title}}</h2>
  </div>
  <div class="filter-icons-container">

  <div class="category-and-post-filter">
    {{combo-box
    class="category-director"
    content=categories
    value=category
    valueProperty="value"
    onChange=(action "changeCategory")
    options=(hash
      caretDownIcon="filter"
      caretUpIcon="filter"
    )
  }}
    

     {{combo-box
    class="posts-filter"
    content=statuses
    value=status
    valueProperty="value"
    onChange=(action "changeStatus")
    options=(hash
      caretDownIcon="sort-amount-up"
      caretUpIcon="sort-amount-up"
    )
  }}

  </div>

  {{#if isAdmin}}

  {{#if notInLatest}}
    {{#if isInCategories}}
        {{d-button
        class="add_category"
        action=(action "goesTOCategory")
        icon="wrench"
        }}

      {{else }}
        {{d-button
        class="edit_category"
        action=(action "clickButton")
        icon="wrench"
        }}
    {{/if}}
      
    {{/if}}
{{/if}}

  
 </div>

    <button class="question-btn">
      <span class="btn-text">Ask a Question</span>
    </button>
  </div>
</div>
