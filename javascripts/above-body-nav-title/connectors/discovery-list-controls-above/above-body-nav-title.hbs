    )
  }}
    

     {{combo-box
    class="posts-filter"
    content=statuses
    value=status
    valueProperty="value"
    onChange=(action "changeStatus")
    options=(hash
      caretDownIcon="sort-amount-up"
      caretUpIcon="sort-amount-up"
    )
  }}

  </div>

